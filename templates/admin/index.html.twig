        ;
        $('.ui.accordion')
            .accordion()
        ;
        $('#languageNew').on("submit",
        function languageNew(event) {
            let skillNameEl = $('#skillName').val();
            let skillLevelEl = $('#languageLevel').val();
            var fd = new FormData();
            fd.append('skillName', languageLevelEl);
            fd.append('languageLevel', skillLevelEl);

            $.ajax({
                url: '{{ path("language_new") }}',
                data: fd,
                processData: false,
                contentType: false,
                type: 'POST',
            });
        });

        $('#technoNew').on("submit",
            function technoNew(event) {
                event.preventDefault();
                let technoNameEl = $('#technoName').val();
                let technoLogoEl = $('#technoLogo').val();
                var fd = new FormData();
                fd.append('technoName', technoNameEl);
                fd.append('technoLogo', technoLogoEl);

                $.ajax({
                    url: '{{ path("techno_new") }}',
                    data: fd,
                    processData: false,
                    contentType: false,
                    type: 'POST',
                });
            });

        $('#skillNew').on("submit",
            function skillNew(event) {
                event.preventDefault();
                let skillNameEl = $('#skillName').val();
                let skillLevelEl = $('#skillLevel').val();
                var fd = new FormData();
                fd.append('skillName', skillNameEl);
                fd.append('skillLevel', skillLevelEl);

                $.ajax({
                    url: '{{ path("skill_new") }}',
                    data: fd,
                    processData: false,
                    contentType: false,
                    type: 'POST',
                });
            })
    </script>
