{% extends 'base.html.twig' %}

{% block title %}Diploma{% endblock %}

{% block body %}
    <h1>Diploma</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ diploma.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ diploma.name }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ diploma.logo }}</td>
            </tr>
            <tr>
                <th>School</th>
                <td>{{ diploma.school }}</td>
            </tr>
            <tr>
                <th>DateStart</th>
                <td>{{ diploma.dateStart ? diploma.dateStart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateEnd</th>
                <td>{{ diploma.dateEnd ? diploma.dateEnd|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('diploma_index') }}">back to list</a>

    <a href="{{ path('diploma_edit', {'id': diploma.id}) }}">edit</a>

