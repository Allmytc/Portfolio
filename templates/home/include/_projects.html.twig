
{% for project in user.projects %}
    <div class="purple card">
        <div class="blurring dimmable image">
            <div class="ui dimmer">
                <div class="content">
                    <div class="center">
                        <a class="ui inverted button">Voir plus</a>
                    </div>
                </div>
            </div>
            <img src="{{ project.image }}">
        </div>
        <div class="content">
            <a class="header">{{ project.name }}</a>
            <div class="meta">
                <span class="date">{{ project.dateStart | date("d/m/Y") }} - {{ project.dateEnd | date("d/m/Y") }}</span>
            </div>
            <div class="description">
                {{ project.description | slice(0, 120) }} ...
            </div>
        </div>
        <div class="extra content">
            <div class="author">
                {% for techno in project.technos %}
                    <img class="ui avatar small image" src="{{ techno.logo }}">
                {% endfor %}
            </div>
        </div>
    </div>
{% endfor %}

{% block javascripts %}
    <script>
        $('.special.cards .image').dimmer({
            on: 'hover'
        });
    </script>
{% endblock %}